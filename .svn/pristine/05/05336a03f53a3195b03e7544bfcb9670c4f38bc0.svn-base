<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.happyjob.study.mngtmg.dao.MngTmgDao">

	<!--  목록 조회 -->
	<select id="termlist" resultType="kr.happyjob.study.mngtmg.model.MngTmgModel">
		/*kr.happyjob.study.mngtmg.dao.MngTmgDao.termlist*/
		select  user_no
				,	loginID
				,	user_hp
				,	user_regdate
				,  	user_businesstype
				,	user_coname
				,	user_rpname
				,	user_cornm
				,	user_zipcode 
				,   user_address1
				,	user_address2
				,	user_status
				,	user_manager
				,	user_type
		from tb_userinfo
		 <where>
            <if test="(sname != null) and (!sname.equals(''))">
                <choose>
                    <when test="searchKey eq 'writer'.toString()">
                        AND user_coname LIKE CONCAT('%', #{sname}, '%')
                    </when>
                    <when test="searchKey eq 'title'.toString()">
                        AND user_rpname LIKE CONCAT('%', #{sname}, '%')
                    </when>
                    <otherwise>
                        AND (
                            user_coname LIKE CONCAT('%', #{sname}, '%')
                            OR user_rpname LIKE CONCAT('%', #{sname}, '%')
                        )
                    </otherwise>
                </choose>
            </if>
            AND user_type NOT IN ('P', 'A', 'D') <!-- Exclude user types 'P' and 'A' -->
        </where>
        ORDER BY user_regdate DESC
        LIMIT #{pageindex}, #{pageSize}
    </select>
    

	
	<!-- 유저타입 선택 조회 -->
	<select id="complistByUserType" resultType="kr.happyjob.study.mngtmg.model.MngTmgModel">
		/*kr.happyjob.study.mngtmg.dao.MngTmgDao.complistByUserType*/
		select  user_no
				,	loginID
				,	user_hp
				,	user_regdate
				,  	user_businesstype
				,	user_coname
				,	user_rpname
				,	user_cornm
				,	user_zipcode 
				,   user_address1
				,	user_address2
				,	user_status
				,	user_manager
				,	user_type
		from tb_userinfo
	 	WHERE user_type = #{userType}
	    AND user_type NOT IN ('P', 'A', 'D')
	    <if test="(sname != null) and (!sname.equals(''))">
	        <choose>
	            <when test="searchKey eq 'writer'.toString()">
	                AND user_coname LIKE CONCAT('%', #{sname}, '%')
	            </when>
	            <when test="searchKey eq 'title'.toString()">
	                AND user_rpname LIKE CONCAT('%', #{sname}, '%')
	            </when>
	            <otherwise>
	                AND (user_coname LIKE CONCAT('%', #{sname}, '%')
	                OR user_rpname LIKE CONCAT('%', #{sname}, '%'))
	            </otherwise>
	        </choose>
	    </if>
	    ORDER BY user_regdate DESC
	    LIMIT #{pageindex}, #{pageSize}
    </select>
	
	<select id="countcomplist" resultType="int">
		<!-- kr.happyjob.study.mngtmg.dao.MngTmgDao.complist -->
		select count(*)
		from tb_userinfo
		<where>
			<if test="(sname != null) and (!sname.equals(''))">
				<choose>
					<when test="searchKey eq 'writer'.toString()">
						and user_coname LIKE CONCAT('%', #{sname}, '%')
					</when>
					<when test="searchKey eq 'title'.toString()">
						and user_rpname LIKE CONCAT('%', #{sname}, '%')
					</when>
					<otherwise>
						and (user_coname LIKE CONCAT('%', #{sname}, '%') OR user_rpname LIKE CONCAT('%', #{sname}, '%'))
					</otherwise>
				</choose>
			</if>
			<if test="(delyn != null) and (!delyn.equals(''))">
				AND user_type = #{delyn}
			</if>
		</where>
	</select>
	
	<select id="compselectone" resultType="kr.happyjob.study.mngtmg.model.MngTmgModel">
		select  user_no
				,	loginID
				,	user_hp
				,	user_regdate
				,  	user_businesstype
				,	user_coname
				,	user_rpname
				,	user_cornm
				,	user_zipcode 
				,   user_address1
				,	user_address2
				,	user_status
				,	user_manager
				,	user_type
		from tb_userinfo
		where user_no= #{user_no}
	</select>
	
	
	
	
	
	<update id ="compupdate">
		update tb_userinfo
					set 	user_status = 'Y',
							user_type   = 'C'
							
		where  user_no = #{user_no}
	</update>
	
	<update id ="compdelete">
		update tb_userinfo
					set 	user_status = 'N',
							user_type   = 'R'
					
		where  user_no = #{user_no}
	</update>
</mapper>